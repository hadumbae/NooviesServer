{
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "module": "NodeNext",
    "outDir": "dist",
    "paths": {
      "@config/*": ["shared/config/*"],
      "@models/*": ["domains/users/model/*"]
    }
  }
}